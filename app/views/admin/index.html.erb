<div class="uk-container admin">
  <h1 class="uk-heading-divider">
    <i class="fa fa-music uk-margin-small-right"></i> Party Jukebox
    <i class="fa fa-music uk-margin-small-left"></i>
  </h1><!-- .uk-heading-divider -->
  <div class="uk-grid-match uk-text-center" uk-grid>
    <% @playlists.each do |playlist| %>
      <div class="uk-width-1-1 uk-width-1-3@m">
        <div class="uk-card uk-card-default">
          <div class="uk-card-header">
            <h3 class="uk-card-title"><%= playlist[:name] %></h3><!-- .uk-card-body -->
          </div>
          <div class="uk-card-body">
            <% img = playlist[:images].select { |i| i["width"] == i["height"] }.first %>
            <%= image_tag img && img["url"] || "http://via.placeholder.com/300x300", height: "150px", width: "150px" %>
          </div><!-- .uk-card-body -->
          <div class="uk-card-footer">
            <%= form_tag start_party_path do %>
              <%= hidden_field_tag "playlist_uri", playlist[:uri] %>
              <%= button_tag class: "uk-button uk-button-primary uk-width-1-1" do %>
                <span class="start-party-icon">
                  <i class="fa fa-play"></i>
                </span><!-- .start-party-icon -->
                Start Party
              <% end %>
            <% end %>
          </div><!-- .uk-card-footer -->
        </div><!-- .uk-card -->
      </div>
    <% end %>
  </div><!-- .uk-grid-match uk-child-width-expands@s -->
</div><!-- .uk-container -->